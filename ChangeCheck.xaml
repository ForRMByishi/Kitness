<Window x:Class="Kitness1.ChangeCheck"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kitness1"
        mc:Ignorable="d"
         Title="Kitness" Height="480" Width="640">
	<Grid>
		<Image Margin="-6,-30,-0.4,0.4" Source="change_check.jpg" Stretch="Fill"/>

		<Label x:Name="lblAsk" FontSize="20" Content="Label" HorizontalAlignment="Left" Margin="90,149,0,0" VerticalAlignment="Top" Height="109" Width="458"/>
		<Button x:Name="btYes"  HorizontalAlignment="Left" Margin="90,329,0,0" VerticalAlignment="Top" Width="205" Click="btYes_Click" Height="91">
			<Image Height="88" Source="yes.png" Stretch="Fill" Width="207"/>
		</Button>
		<Button x:Name="btNo" HorizontalAlignment="Left" Margin="340,329,0,0" VerticalAlignment="Top" Width="208" Height="91">
			<Image Height="88" Source="no.png" Stretch="Fill" Width="207"/>
		</Button>

	</Grid>
</Window>
